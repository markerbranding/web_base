---
eleventyComputed:
    title: "{{ contacto[0].titleseo }}"
    description: "{{ contacto[0].descseo }}"
layout: "base.njk"
#gsap: "contacto.js"
permalink: "/{{ page.fileSlug }}/"
---

<div data-barba="container" data-barba-namespace="contacto" data-css="contacto" data-js="contacto">
{% for item in contacto %}

    <section id="section__hero" class="pad__lr__5">
        <div class="column__2">
            <div class="col__left flex__justify__c pad__right__5 width__45">            
                <h1>{{ item.heroH1 }}</h1>
                <div>{{ item.heroH2 | safe }}</div>
                <p>{{ item.heroP }}</p>
                <a class="btn btn__hero">{{ item.heroBtn }}</a>
            </div>
            <div class="col__right width__55">
                {% if item.heroImg %}
                <picture>
                    {% for format, images in item.heroImg %}
                    <source srcset="{{ images | srcset }}" sizes="(max-width: 1200px) 100vw, 1200px" type="image/{{ format }}">
                    {% endfor %}
                    <img src="{{ item.heroImg.jpeg[0].url }}" alt="{{ item.heroImgAlt }}">
                </picture>
                {% endif %}
            </div>
        </div>
    </section>


    <section class="pad__all__5">
        <div class="column__2">
            <div class="col__left">
                <h2>Contáctanos</h2>
            </div>
            <div class="col__right ">
                <form action="/success" method="POST">
                    <label for="name">Nombre:</label>
                    <input type="text" id="name" name="name" required>
                
                    <label for="email">Correo Electrónico:</label>
                    <input type="email" id="email" name="email" required>
                
                    <label for="message">Mensaje:</label>
                    <textarea id="message" name="message" required></textarea>
                
                    <button type="submit">Enviar</button>
                </form>
            </div>
        </div>
    </section>

{% endfor %}
</div>